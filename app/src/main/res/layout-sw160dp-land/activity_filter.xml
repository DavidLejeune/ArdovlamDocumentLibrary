<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lejeune.david.ardovlamdocumentlibrary.FilterActivity">

    <CheckBox
        android:text="@string/chk_commercial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkDocuments"
        android:layout_alignLeft="@+id/chkDocuments"
        android:layout_alignStart="@+id/chkDocuments"
        android:id="@+id/chkCommercial" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/txtDepartment"
        android:layout_alignBaseline="@+id/lblDepartment"
        android:layout_alignBottom="@+id/lblDepartment"
        android:layout_toRightOf="@+id/lblDepartment"
        android:layout_toEndOf="@+id/lblDepartment"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:text="@string/txt_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResultFilter"
        android:textColor="@android:color/holo_blue_light"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtDepartment"
        android:layout_toEndOf="@+id/txtDepartment"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />

    <TextView
        android:text="@string/lbl_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDepartment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="@string/chk_documents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkDocuments"
        android:layout_below="@+id/txtDepartment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShowFilteredDocs"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

    <TextView
        android:text="@string/lbl_doc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDocType"
        android:layout_below="@+id/txtResultFilter"
        android:layout_alignLeft="@+id/txtResultFilter"
        android:layout_alignStart="@+id/txtResultFilter"
        android:paddingTop="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinDocType"
        android:layout_below="@+id/lblDocType"
        android:layout_alignLeft="@+id/lblDocType"
        android:layout_alignStart="@+id/lblDocType" />

    <CheckBox
        android:text="@string/chkbox_technical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkTechnical"
        android:layout_below="@+id/chkCommercial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
